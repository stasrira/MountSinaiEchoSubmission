{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "assay_type": {
      "type": "string",
      "enum": ["rna_seq", "scrna_seq", "atac_seq", "chip_seq", "scatac_seq", "medip_seq", "mint_chip", "wgbs", "snatac_seq", "snmc_seq", "cytof", "epic"]
    },
    "source": {
      "type": "string",
      "enum": [ "WR", "WRAIR", "DU", "Duke", "BA", "Battelle", "AS", "ASU", "IS", "ISMMS",
      "SA", "Salk", "CU", "Columbia", "NA", "Northern Arizona University", "GA", "Gryphon Scientific"]
    },
    "sequence_datasets": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "control": {
            "type": "string",
            "enum": ["T", "F"]
          }
        }
      }
    }
  },
  "required": [
    "name",
    "assay_type",
    "source",
    "sequence_datasets"
  ]
}
